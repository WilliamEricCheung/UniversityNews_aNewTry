@model List<News>

@{
    ViewData["Title"] = "主页";
    string Title = "主页";
    Layout = "_Layout";

    var BUAAList = Model.Where(n => n.UniversityName == "BUAA");
    var THUList = Model.Where(n => n.UniversityName == "THU");
    var PKUList = Model.Where(n => n.UniversityName == "PKU");
    var RUCList = Model.Where(n => n.UniversityName == "RUC");
}



