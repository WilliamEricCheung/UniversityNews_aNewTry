<h2>@Title</h2>

<!--北航-->
<div class="row" style="background-image: url(~/images/mainPage/buaa_bg.png);background-size: 100%;position: relative;">
    <!--<img alt="Bootstrap Image Preview" src="~/images/mainPage/buaa_bg.jpg">
    -->
    <!--学校logo-->
    <div class="img-rounded" style="position: absolute, top:0,left:0">
        <img src="~/images/mainPage/buaa_logo.jpg" class="img-rounded" style="width: 120px;height: 120px;padding: 15px;" />
    </div>
    <!--单条新闻-->
    @foreach (var item in BUAAList)
    {
        <div class="col-md-4">
            <div class="news_image" style="float: left;">
                <img src="@item.PictureUrl" class="img-rounded" width="80%"/>
            </div>
            <div class="news_info" style="float: left; width: 80%;">
                <a href="@item.NewsUrl"><h4>@item.Title</h4></a>
            </div>
        </div>
    }
</div>
